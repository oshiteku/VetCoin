@page
@model CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Subscription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subscription.Title" class="control-label"></label>
                <input asp-for="Subscription.Title" class="form-control" />
                <span asp-validation-for="Subscription.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subscription.Content" class="control-label"></label>
                <textarea asp-for="Subscription.Content" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Subscription.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subscription.Fee" class="control-label"></label>
                <input asp-for="Subscription.Fee" class="form-control" />
                <span asp-validation-for="Subscription.Fee" class="text-danger"></span>

                <small id="emailHelp" class="form-text text-muted">料金の変更は出来ないので慎重に設定してください</small>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
